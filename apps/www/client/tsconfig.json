{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/ui": ["./src/components/ui"],

      "@/dashboard/*": ["./src/app/dashboard/*"],
      "@/dashboard/component": ["./src/app/dashboard/_components"],
      "@/dashboard/lib": ["./src/app/dashboard/_lib"],
      "@/dashboard/widget": ["./src/app/dashboard/_components/widgets"],
      "~/": ["/public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
